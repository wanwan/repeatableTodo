<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_task_item"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="5dp">

    <LinearLayout android:id="@+id/task_item"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <TextView android:id="@+id/taskname" android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <TextView android:id="@+id/taskdetail" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    </LinearLayout>
</android.support.v7.widget.CardView>